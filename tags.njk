---
layout: secondary.njk
pagination:
  data: collections.tagsList
  size: 1
  alias: title
permalink: "/tags/{{ title | slugify }}/"
---
<section id="items">
  <h2>{{ title | title }}</h2>
  <ol>
  {%- for a in collections[title} | reverse %}
    <li><a href="{{ a.url }}">{{ a.data.title }}</a></li>
  {%- endfor %}
  </ol>
</section>
